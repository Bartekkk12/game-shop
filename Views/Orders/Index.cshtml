@model IEnumerable<Order>

@{
    ViewData["Title"] = "Orders";
}

<h2>Lista zamówień</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nowe zamówienie</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Użytkownik</th>
            <th>Data zamówienia</th>
            <th>Status</th>
            <th>Liczba pozycji</th>
            <th>Wartość całkowita</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@(order.User?.Email ?? order.UserId ?? "Gość")</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <span class="badge bg-@GetStatusBadgeColor(order.status)">
                        @GetStatusDisplayName(order.status)
                    </span>
                </td>
                <td>@order.OrderItems.Count</td>
                <td>@order.OrderItems.Sum(oi => oi.Price * oi.Quantity).ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-info">Szczegóły</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-sm btn-warning">Edytuj</a>
                        <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-sm btn-danger">Usuń</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@functions {
    string GetStatusBadgeColor(Order.Status status)
    {
        return status switch
        {
            Order.Status.New => "secondary",
            Order.Status.PaymentReceived => "info",
            Order.Status.PaymentSuceeded => "success",
            Order.Status.PaymentRejected => "danger",
            Order.Status.InProgress => "warning",
            Order.Status.Sent => "primary",
            _ => "secondary"
        };
    }

    string GetStatusDisplayName(Order.Status status)
    {
        return status switch
        {
            Order.Status.New => "Nowe",
            Order.Status.PaymentReceived => "Otrzymano płatność",
            Order.Status.PaymentSuceeded => "Płatność zakończona",
            Order.Status.PaymentRejected => "Płatność odrzucona",
            Order.Status.InProgress => "W trakcie",
            Order.Status.Sent => "Wysłane",
            _ => status.ToString()
        };
    }
}
