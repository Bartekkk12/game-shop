@model Order

@{
    ViewData["Title"] = "Edytuj zamówienie";
}

<h2>Edytuj zamówienie #@Model.Id</h2>

<div class="card mb-4">
    <div class="card-header">
        <h4>Informacje o zamówieniu</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID zamówienia:</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Użytkownik:</dt>
            <dd class="col-sm-9">@(Model.User?.Email ?? Model.UserId ?? "Gość")</dd>

            <dt class="col-sm-3">Data zamówienia:</dt>
            <dd class="col-sm-9">@Model.OrderDate.ToString("yyyy-MM-dd HH:mm:ss")</dd>

            <dt class="col-sm-3">Wartość całkowita:</dt>
            <dd class="col-sm-9">
                <strong>@Model.OrderItems.Sum(oi => oi.Price * oi.Quantity).ToString("C")</strong>
            </dd>
        </dl>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h4>Zmień status zamówienia</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
            @Html.AntiForgeryToken()
            
            <div class="form-group">
                <label for="status" class="form-label">Status</label>
                <select id="status" name="status" class="form-control" required>
                    @foreach (Order.Status statusValue in Enum.GetValues(typeof(Order.Status)))
                    {
                        <option value="@statusValue" selected="@(statusValue == Model.status)">
                            @GetStatusDisplayName(statusValue)
                        </option>
                    }
                </select>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Anuluj</a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h4>Pozycje zamówienia</h4>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Gra</th>
                    <th>Cena jednostkowa</th>
                    <th>Ilość</th>
                    <th>Wartość</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td>@item.Game.Title</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.Quantity</td>
                        <td>@((item.Price * item.Quantity).ToString("C"))</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@functions {
    string GetStatusDisplayName(Order.Status status)
    {
        return status switch
        {
            Order.Status.New => "Nowe",
            Order.Status.PaymentReceived => "Otrzymano płatność",
            Order.Status.PaymentSuceeded => "Płatność zakończona",
            Order.Status.PaymentRejected => "Płatność odrzucona",
            Order.Status.InProgress => "W trakcie",
            Order.Status.Sent => "Wysłane",
            _ => status.ToString()
        };
    }
}
