@model IEnumerable<Game>

@{
    ViewData["Title"] = "Games";
}

<h2>Gry</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        <a class="btn btn-primary" asp-action="Create">Dodaj nową grę</a>
    </p>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tytuł</th>
            <th>Kategoria</th>
            <th>Wydawca</th>
            <th>Cena</th>
            <th>Stan magazynowy</th>
            <th>Platforma</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <td>@game.Title</td>
                <td>@game.Category?.Name</td>
                <td>@game.Publisher?.Name</td>
                <td>@game.Price.ToString("C")</td>
                <td>@game.Stock</td>
                <td>@game.GamePlatform</td>
                <td>
                    <a asp-action="Details" asp-route-id="@game.Id" class="btn btn-sm btn-info">Szczegóły</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@game.Id" class="btn btn-sm btn-warning">Edytuj</a>
                        <a asp-action="Delete" asp-route-id="@game.Id" class="btn btn-sm btn-danger">Usuń</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>